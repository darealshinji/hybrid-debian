#!/bin/sh

if test x"$1" = x"-h" -o x"$1" = x"--help" ; then
cat << EOF
Usage: ./configure [options]

options:
  -h, --help               print this message
  --prefix=PREFIX          install files into PREFIX [/usr/local]
                           choose the same prefix where Hybrid is installed
EOF
exit 1
fi

for opt; do
    optarg="${opt#*=}"
    case "$opt" in
        --prefix=*)
            prefix="$optarg"
            ;;
        *)
            ;;
    esac
done

test -n "$prefix" || prefix="/usr/local"

rm -f Makefile
cat >> Makefile << EOF
prefix = $prefix
EOF
cat Makefile.in >> Makefile

rm -f install-hybrid-avisynth-extension.sh
cat >> install-hybrid-avisynth-extension.sh << EOF
#!/bin/sh

PKG_VER_FILE="$prefix/share/hybrid-avisynth-extension/version"
EOF
cat install-hybrid-avisynth-extension.sh.in >> install-hybrid-avisynth-extension.sh

echo "prefix = $prefix"
echo "Now run 'make && make install'"

exit 0
