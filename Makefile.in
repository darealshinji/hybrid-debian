PREFIX ?= $(prefix)
script  = install-hybrid-avisynth-extension.sh


all:

install:
	install -m755 -d $(DESTDIR)$(PREFIX)/share/hybrid-avisynth-extension
	install -m755 -D $(script) $(DESTDIR)$(PREFIX)/share/hybrid-avisynth-extension
	install -m644 -D version $(DESTDIR)$(PREFIX)/share/hybrid-avisynth-extension

uninstall:
	rm -rf $(DESTDIR)$(PREFIX)/share/hybrid-avisynth-extension

clean:

distclean: clean
	rm -f $(script) Makefile

